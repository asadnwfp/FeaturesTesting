<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4">
    <ImageView
        android:id="@+id/imgv_childview_spiceexpandablelistivew_Image"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_childview_spiceexpandablelistivew_Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ExpandableListView_Child_Subscriber"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_childview_spiceexpandablelistivew_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/ExpandableListView_Child_Subscriber"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_childview_spiceexpandablelistivew_Population"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/ExpandableListView_Child_Subscriber"
        android:layout_weight="1"/>

</LinearLayout>