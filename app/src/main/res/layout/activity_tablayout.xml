<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment
        android:id="@+id/fragment_tablayout"
        android:name="com.evampsaanga.evamptesting.viewpagers.FirstFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
<android.support.design.widget.TabLayout xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/tl_activity_tablayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    app:tabMode="fixed"
    app:tabGravity="fill" />
</RelativeLayout>